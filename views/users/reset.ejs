<%- include("../partials/header") -%>

<div class="row">
	<div class="col-md-12">
		<form action="/users/reset/<%= token %>" method="POST">
		  <legend>Wachtwoord wijzigen</legend>
		  <div class="form-group">
		    <label for="password">Nieuw wachtwoord</label>
		    <input type="password" name="password" value="" placeholder="Nieuw wachtwoord" autofocus="autofocus" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <label for="confirm">Bevestig wachtwoord</label>
		    <input type="password" name="confirm" value="" placeholder="Bevestig wachtwoord" class="form-control"/>
		  </div>
		  <div class="form-group">
		    <button type="submit" class="btn btn-primary">Wijzig wachtwoord</button>
		  </div>
		</form>
	</div>
</div>

<%- include("../partials/footer") -%>